<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="5dp"
              android:gravity="center_vertical"
              android:background="@color/whiteBgColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lefttv_actionbar"
        android:drawableRight="@drawable/icon_addr"
        android:text="成都"
        android:textColor="@color/textcolor_adr"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_alignBottom="@+id/news_actionbar"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/roundedges"
        android:layout_toEndOf="@+id/lefttv_actionbar">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/search"
            android:layout_centerVertical="true"
            android:id="@+id/search_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_actionbar"
            android:focusable="false"
            android:hint="清新可爱校园装"
            android:layout_marginLeft="5dp"
            android:textColorHint="@color/textcolor_hint"
            android:textSize="16sp"
            android:layout_toRightOf="@id/search_edit"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/scan"
            android:id="@+id/scan_actionbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/information"
            android:id="@+id/news_actionbar"/>
        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/news_num"
            android:text="3"
            android:textColor="@color/whiteBgColor"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>